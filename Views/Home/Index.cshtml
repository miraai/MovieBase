@{
    ViewData["Title"] = "Home Page";
}

<div id="myCarousel" class="carousel slide" data-ride="carousel" data-interval="6000">
    <ol class="carousel-indicators">
        <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
        <li data-target="#myCarousel" data-slide-to="1"></li>
        <li data-target="#myCarousel" data-slide-to="2"></li>
    </ol>
    <div class="carousel-inner" role="listbox">
        <div class="item active">
            <img src="~/images/image1.jpg" alt="movie1" class="img-responsive" />
        </div>
        <div class="item">
            <img src="~/images/image2.jpg" alt="movie2" class="img-responsive" />
        </div>
        <div class="item">
            <img src="~/images/image3.jpg" alt="movie3" class="img-responsive" />
        </div>
    </div>
    <a class="left carousel-control" href="#myCarousel" role="button" data-slide="prev">
        <span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span>
        <span class="sr-only">Previous</span>
    </a>
    <a class="right carousel-control" href="#myCarousel" role="button" data-slide="next">
        <span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span>
        <span class="sr-only">Next</span>
    </a>
</div>

<div class="row">
    <div class="col-md-3">
        <h2>Movie Database</h2>
        <ul>
            <li>List of all avaliable movies.</li>
            <li>Easy way to manage all movies.</li>
            <li>Check movie details.</li>
            <li>Search all movies by title or genre.</li>
        </ul>
    </div>
    <div class="col-md-3">
        <h2>Add Movies</h2>
        <ul>
            <li>Add new movies in the list.</li>
            <li>Input their genre, rating, price and release date.</li>
            <li>Edit the added movies.</li>
            <li>Search added movies.</li>
        </ul>
    </div>
    <div class="col-md-3">
        <h2>Edit Movies</h2>
        <ul>
            <li>Edit all movies in the databse.</li>
            <li>Edit movie name and release date..</li>
            <li>Edit movie genre and rating.</li>
            <li>Edit movie price.</li>
        </ul>
    </div>
    <div class="col-md-3">
        <h2>Delete Movies</h2>
        <ul>
            <li>Delete movies from the database.</li>
            <li>Confirmation question before deleting.</li>
        </ul>
    </div>
</div>
